<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_grey"    
    android:orientation="vertical" >

    <LinearLayout        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <Button
	        android:id="@+id/bBack"	       
	        style="@style/button_white"  
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_height="wrap_content"
	        android:text="뒤로"
	        android:textSize="12sp"
	        android:background="@drawable/backbutton_default_click" />
        
        <TextView
	        android:id="@+id/tvTitle"
	        style="@style/title_white"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="32dp"	        
	        android:gravity="center"
	        android:text="문자 보내기" />        
    </LinearLayout> 
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"        
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal" >
        
        <Button 
            android:id="@+id/sendmessage"
            style="@style/button_white"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_default_click"
            android:text="문자 보내기"/>
	</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/checkBoxAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:button="@drawable/checkbox_on_off"
            android:focusable="false" />

        <TextView
            android:id="@+id/tvAllchoice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="전체 선택"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    
    <ListView 
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"      
        android:background="#ffffffff" />
    
</LinearLayout>